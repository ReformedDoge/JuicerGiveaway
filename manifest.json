{
    "manifest_version": 3,
    "name": "Juicer twt Giveaway Extension",
    "description": "Giveaway Extension",
    "version": "1.0.0",
    "icons": {
        "16": "/icons/2222.ico",
        "32": "/icons/2222.ico",
        "48": "/icons/2222.ico",
        "128": "/icons/2222.ico"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Juicer twt Giveaway Extension",
        "default_popup": "popup/popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": ["/assets/pogchamp.mp3"],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": [ 
        "storage", 
        "webRequest", 
        "tabs" 
    ],
    "host_permissions": [
        "https://twitter.com/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": ["foreground.js","csvparse.js","bootstrap.bundle.min.js"],
        "matches": [ "https://*.twitter.com/*", "http://*.twitter.com/*" ],
        "run_at": "document_start",
        "css":["bootstrap.min.css","wheel.css"]
    }]
}
